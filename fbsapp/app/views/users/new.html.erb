<div class="py-3">
    <h3>New User</h3>
</div>
<div>
    <%= form_with scope: :user, url: users_path, local: true do |form| %>
        <div class="d-flex my-3">
            <div class="mx-2">
                <a class="pr-2">User Name</a>
                <%= form.text_field :username %>
            </div>
            <div>
                <a class="pr-2">Password</a>
                <%= form.text_field :password %>
            </div>
        </div>

        <div>
            <%= form.submit %>
        </div>
    <% end %>
</div>
