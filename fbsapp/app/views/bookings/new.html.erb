<div class="py-3">
    <h3 class="text-uppercase font-weight-bolder">New Booking</h3>
</div>
<% if flash.each.any? %>
    <div class="btn btn-danger w-100 my-2">
        <% flash.each do |message_type, message| %>
            <div class=" alert-<%= message_type %>"><%= message %></div>
        <% end %>
    </div>
<% end %>

<div>
    <%= form_with scope: :booking, url: bookings_path, local: true do |form| %>
        <div class="d-flex my-3">
            <div>
                <a class="pr-2">Room ID</a>
                <%= form.text_field :roomname %>
            </div>
        </div>

        <div class="d-flex py-3">
            <div class="mx-2">
                <a class="pr-2">Date</a>
                <%= form.date_select :date %>
            </div>
        </div>

        <div class="d-flex pt-3 pb-5">
            <div class="mx-2">
                <a class="pr-2">Start Time</a>
                <%= form.text_field :startTime %>
            </div>
            <div class="mx-2">
                <a class="pr-2">End Time</a>
                <%= form.text_field :endTime %>
            </div>
        </div>

        <div>
            <%= form.submit %>
        </div>
    <% end %>
</div>
