<!DOCTYPE html>
<html>
		<head>
				<title>Kickass Facility Booking System</title>
				<%= csrf_meta_tags %>
				<%= csp_meta_tag %>

				<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
				<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

		<body>
    <div class="header">
        <div class="row mb-3">
            <div class="col-3">
                <div class="float-right text-white">
                    <i class="fa fa-home"></i>
                    KICKASS<br>BOOKING SYSTEM
                </div>
            </div>
            <div class="d-flex col-6 text-uppercase justify-content-end">
                <% if session[:username]=="admin" %>
                    <div class="navicon">
                        <%= link_to welcome_index_url, {:class => "navicon-content"} do %>
                            <div>
                                <i class="fa fa-home mr-1"></i>Home
                            </div>
                        <% end %>
                    </div>
                    <div class="navicon">
                        <%= link_to bookings_url, {:class => "navicon-content"} do %>
                            <div>
                                <i class="fa fa-clipboard mr-1"></i>Bookings
                            </div>
                        <% end %>
                    </div>
                    <div class="navicon">
                        <%= link_to users_url, {:class => "navicon-content"} do %>
                            <div>
                                <i class="fa fa-users mr-1"></i>Users
                            </div>
                        <% end %>
                    </div>
                <% elsif session[:user_id] %>
                    <div class="navicon">
                        <%= link_to welcome_index_url, {:class => "navicon-content"} do %>
                            <div>
                                <i class="fa fa-home mr-1"></i>Home
                            </div>
                        <% end %>
                    </div>
                    <div class="navicon">
                        <%= link_to bookings_url, {:class => "navicon-content"} do %>
                            <div>
                                <i class="fa fa-tasks mr-1"></i>Manage Booking
                            </div>
                        <% end %>
                    </div>
                <% end %>
            </div>
            <% if session[:username] %>
                <div class="col-3 align-self-center">
                    <div class="float-left text-white text-bold">
                        <small> Welcome, <%= session[:username]  %>!</small><br>
                        <%= link_to "Log out", logout_path, {method: :delete, :class=>"navicon-content"} %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

    <div class="container">
        <%= yield %>
    </div>
		</body>
</html>
