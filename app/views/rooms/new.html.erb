<div class="py-3">
    <h3 class="text-uppercase font-weight-bolder">Add New Room</h3>
</div>
<% if flash.each.any? %>
    <div class="btn btn-danger w-100 my-2">
        <% flash.each do |message_type, message| %>
            <div class=" alert-<%= message_type %>"><%= message %></div>
        <% end %>
    </div>
<% end %>
<div class="d-flex d-lg-block justify-content-center">
    <%= form_with scope: :room, url: rooms_path, local: true do |f| %>
        <div class="d-flex my-3">
            <div>
                <a class="pr-2">Upload an Image:</a>
                <%= f.file_field :room_image %>
            </div>
        </div>
        <div class="d-flex my-3">
            <div>
                <a class="pr-2">Room Name:</a>
                <%= f.text_field :name, style: 'width: 396px' %>
            </div>
        </div>
        <div class="d-flex my-3">
            <div>
                <a class="pr-2">Description:</a>
                <br>
                <%= f.text_area :description, style:'width: 500px; height: 8em; resize: none; float: bottom' %>
            </div>
        </div>
        <div>
            <%= f.submit 'Add New Room', :class=>'btn btn-primary' %>
        </div>
    <% end %>
</div>
